<div class="page-header text-primary text-center">
  <h1><%=@title%>&nbsp;Blog</h1>
</div>

<%= form_tag({controller: "articles", action: "create"}, method: "POST",id: 'frmcretate', class: 'form-horizontal', multipart: true)do |form| %>

  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <input type="text" class="form-control" id="article_title" placeholder="Email"
    name='article[title]'>
  </div>

  <div class="form-group">
    <label for="fName">Content</label>
    <textarea class="form-control" rows="3" name='article[text]' placeholder="Content Post" ></textarea>
  </div>

  <div class="form-group">
    <label for="fName">image</label><br/>
    <input type='file' id="imgInp" name='article[picture]'/>
    <img id='img_review' src="#" alt="your image" class="img-thumbnail" style="height: 100px;"/>
  </div>

  <div>
    <button type="submit" class="btn btn-default" name="commit" style="float: right;">Save</button>
  </div>
<% end %>
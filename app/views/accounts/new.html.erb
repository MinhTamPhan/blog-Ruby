
<%= form_tag({controller: "accounts", action: "create"}, method: "POST",id: 'frmsignup')do |form| %>

  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Email"
    name='account[email]'>
  </div>

  <div class="form-group">
    <label for="fName">Full Name</label>
    <input type="text" class="form-control" id="fName" placeholder="Full Name" name='account[fullname]'>
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="fpassword" placeholder="Password" name = 'account[password]'>
  </div>

  <div class="form-group">
    <label for="fcomfirm">Confirm Password</label>
    <input type="password" class="form-control" id="fcomfirm" placeholder="Confirm Passwor" name = 'account[password_confirmation]'>
  </div>

  <div>
    <a href="/accounts">Sign in ?</a>
    <button type="submit" class="btn btn-default" name="commit" style="float: right;">Sign Up</button>
  </div>
<% end %>

<%= form_tag(controller: "accounts", action: "create", method: "POST")do |form| %>
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email"
    name='account[email]'>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name = 'account[password]'>
  </div>
  <div class="checkbox">
    <label>
      <input type="checkbox" name='account[remember]'> Remember me
    </label>
  </div>
  <button type="submit" class="btn btn-default" name="commit">Login</button>
<% end %>